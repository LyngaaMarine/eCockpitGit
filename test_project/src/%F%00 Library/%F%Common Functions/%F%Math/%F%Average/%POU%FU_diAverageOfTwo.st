FUNCTION FU_diAverageOfTwo : DINT
VAR_INPUT
	iA			:DINT;	//Value A
	iB			:DINT;	//Value B
END_VAR
(*%!%__DELIMITER__%!%*)
FU_diAverageOfTwo := (iA+iB)/2;

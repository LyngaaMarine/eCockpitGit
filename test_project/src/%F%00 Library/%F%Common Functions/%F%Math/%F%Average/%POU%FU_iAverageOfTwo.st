FUNCTION FU_iAverageOfTwo : INT
VAR_INPUT
	iA			:INT;	//Value A
	iB			:INT;	//Value B
END_VAR
(*%!%__DELIMITER__%!%*)
FU_iAverageOfTwo := (iA+iB)/2;
FUNCTION FU_lrABXToYDir : BOOL
VAR_IN_OUT
	rX		:LREAL;
	rA		:LREAL;
	rB		:LREAL;
	rY		:LREAL;
END_VAR
(*%!%__DELIMITER__%!%*)
rY	:=		rA * rX + rB;